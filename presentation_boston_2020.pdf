\title{\noindent\Large\textbf{Correcting the failings of DFT:}\\
\footnotesize\textbf{DFT+\emph{U}, Koopmans spectral functionals, and dynamical mean field theory}}
\author{Edward Linscott}
\institute[THEOS]{Theory and Simulation of Materials, EPFL}
\date{Quantum Fluids in Isolation Virtual Seminar Series, 10 Dec 2020}
\begin{document}
\begin{frame}
  \titlepage
\end{frame}



\begin{frame}{Outline}

   The general problem: many body electronic Hamiltonian

   \begin{align*}
      \hat H =
      -\frac{1}{2} \sum_i \nabla_i^2
      +\frac{1}{2}\sum_{i \neq j}\frac{1}{|\mathbf{r}_i-\mathbf{r}_j|}
      - \sum_{i,I}\frac{Z_I}{|\mathbf{r}_i-\mathbf{R}_I|} \\
      - \sum_I\frac{1}{2M_I}\nabla_I^2
      + \frac{1}{2}\sum_{I \neq J}\frac{Z_IZ_J}{|\mathbf{R}_I-\mathbf{R}_J|}
  \end{align*}

   $\Psi(\mathbf{r}_1,...,\mathbf{r}_N)$ is $3N$-dimensional

\end{frame}


\begin{frame}{Outline}

   \small

    Density functional theory (DFT)

    \begin{itemize}
		\item Hohenberg-Kohn: $\rho(\mathbf{r})$ instead of $\Psi(\mathbf{r}_1,...,\mathbf{r}_N)$
		\begin{equation*}
		   E[\rho(\mathbf{r})] \geq E_{GS}; \qquad E[\rho_{GS}(\mathbf{r})] = E_{GS}
      \end{equation*}
		% \begin{equation*}
		% 	E[\rho] = \int d\mathbf{r} \, \big( \underbrace{V_{ext}(\mathbf{r})\rho(\mathbf{r})}_\text{nuclear\ potential}  + \underbrace{F[\rho(\mathbf{r})]}_{\substack{\text{universal}\\\text{functional}\\\text{(unknown)}}}\big)
		% \end{equation*}
		\item Kohn Sham: mapping to a tractable, single-particle problem BUT exchange and correlation must be approximated
		\begin{equation*}
			E[\rho] = \underbrace{T_0[\rho]}_{\substack{\text{kinetic}\\ \text{energy}}} + \int d\mathbf{r} \, \rho(\mathbf{r}) [V_{ext}(\mathbf{r}) + \underbrace{\tfrac{1}{2}\Phi(\mathbf{r})}_{\substack{\text{Hartree}\\\text{potential}}}] + \underbrace{E_{xc}[\rho]}_{\substack{\text{xc-functional}\\\text{(approximated)}}}
		\end{equation*}
      \begin{equation*}
      V_\mathrm{eff}(\mathbf{r}) = V_\mathrm{ext}(\mathbf{r}) + \Phi(\mathbf{r}) + \frac{\delta E_{xc}[\rho]}{\delta \rho(\mathbf{r})}
      \end{equation*}
	\end{itemize}

   End result: a non-interacting system which must be solved self-consistently
   \begin{equation*}
   \left[-\frac{1}{2}\nabla^2+V_\text{eff}[\rho](\mathbf{r})\right]\varphi_i(\mathbf{r}) = \epsilon_i \varphi_i(\mathbf{r}); \qquad
   \rho(\mathbf{r}) = \sum_{i=1}^N |\varphi_i(\mathbf{r})|^2.
   \end{equation*}

\end{frame}

