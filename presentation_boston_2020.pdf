   \vspace{-3em}

   \onslide<2->{KC functionals: assert that $\varepsilon_i = \braopket{\varphi_i}{H}{\varphi_i} = \partial E/\partial f_i$ is independent of $f_i$}

   \onslide<3->{
   \begin{equation*}
      E_{KC}[\rho,\{f_i\}] = \only<4>{\textcolor{red}}{E_{DFT}[\rho]} 
                          + \sum_i \left(
                          \only<5>{\textcolor{red}}{- \int^{f_i}_{0} \varepsilon_i(f) df}
                          \only<6>{\textcolor{red}}{+ f_i \int_0^1 \varepsilon_i(f) df}
                          \right)
   \end{equation*}
   }

   %Starting ansatz, construction of the functional, nice figure demonstrating the terms we subtract and add

   % Note that here we get the difference with KI and KIPZ; in the latter we use DFT+PZ to generate the linear term
\end{frame}

\begin{frame}{Method 2: Koopmans spectral functionals}
   \begin{minipage}[t]{0.45\paperwidth}%
   \begin{equation*}
      E_{KC}[\rho,\only<2>{\textcolor{red}}{\{f_i\}}\only<3->{, \{\alpha_i\}}] = E_{DFT}[\rho]
                          + \sum_i
                          \only<3>{\textcolor{red}}
                          {\only<3->{\alpha_i}}
                          \left(
                          - \int^{f_i}_{0} \varepsilon_i(f) df
                          + f_i \int_0^1 {\varepsilon_i(f)} df
                          \right)
   \end{equation*}
\end{minipage}
   \begin{itemize}[<+(1)->]
      \item orbital density dependence
      \item screening
   \end{itemize}
   \onslide<3->{
      \begin{align*}
          \alpha_{i} =& \alpha^{0} \frac{E^\mathrm{KC}(N) - E_i^\mathrm{KC}(N-1) -\lambda_{ii}^{0}(1)}{\lambda_{ii}^{\alpha^{0}}(1)-\lambda_{ii}^{0}(1)} \\
          \lambda_{ii}^\alpha(f) =& \left.\braopket{\varphi_{i}}{{H}^{\mathrm{DFT}}+\alpha_{i} {v}_{i}^{\mathrm{KC}}}{\varphi_{i}}\right|_{f_{i}=f} 
      \end{align*}
   }
\end{frame}

