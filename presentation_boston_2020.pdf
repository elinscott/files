\begin{frame}{Method 1: DFT+\emph{U}}
   \begin{minipage}[t]{0.45\paperwidth}%
      Strengths
      \begin{itemize}
         \item ``self-correcting''
         \item computationally inexpensive
      \end{itemize}
   \end{minipage}
   \begin{minipage}[t]{0.45\paperwidth}%
      Weaknesses
      \begin{itemize}
         \item arbitrary subspaces (both in shape and number)
         \item complications due to self-consistency
         \item it's always going to increase the bandgap
         \item nothing more than Hartree-Fock
         \item local vs global curvature (I lied earlier...)
      \end{itemize}
   \end{minipage}
\end{frame}

\begin{frame}{Method 1: DFT+\emph{U}}
